<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tela_teste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Tela Testes"
        android:textColor="@color/colorSendText" />


    <LinearLayout
        android:id="@+id/primeiroLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <EditText
            android:id="@+id/send_text"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:background="@color/editTextBack"
            android:textColor="@color/colorSendText"
            android:textSize="16sp"
            android:singleLine="true"/>
        <!-- Button Enviar -->
        <Button
            android:id="@+id/send_btn"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="Enviar" />


    </LinearLayout>

    <!-- Button Enviar 2 -->
    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:background="@color/editTextBack"
        android:layout_height="100dp"
        android:scrollbars="vertical"
        android:text="Texto Enviado: "
        android:layout_centerHorizontal="true" />


    <!-- TextView receive -->

    <TextView
        android:id="@+id/receive_text"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:textColor="@color/blackColor"
        android:textStyle="bold"
        android:background="@color/editTextBack"
        android:layout_height="300dp"
        android:scrollbars="vertical"
        android:text="Texto recebido:\n"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true" />


</androidx.appcompat.widget.LinearLayoutCompat>